    <bean class="service.goods.GoodsCartQtyDownService" />
    <!--  (클라이언트) 카트 상품 카운트 감소 서비스  -->

    <bean class="service.goods.GoodsBuyService" />
    <!--  (클라이언트) 카트담은 상품 구매서비스  -->

    <bean class="service.goods.GoodsOrderService" />
    <!--  (클라이언트) 카트담은 상품 주문서단 넘기는 서비스   -->

    <bean class="service.goods.OrderProcessListService" />
    <!--  (클라이언트) 주문 진행사항 확인 서비스  -->

    <bean class="service.goods.DoPaymentService" />
    <!--  (클라이언트) 주문 결제 서비스  -->

    <bean class="service.goods.ReviewWriteService" />
    <!--  리뷰 작성 서비스  -->

    <bean class="service.goods.GoodsReviewUpdateService" />
    <!--  리뷰 수정 서비스  -->

    <bean class="service.goods.GoodsReviewsService" />
    <!--  리뷰 서비스  -->

    <bean class="service.goods.CartProdDeleteService" />
    <!--  카트삭제서비스  -->

    <bean class="service.goods.GoodsCartRemoveService" />
