<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="controller.goods.GoodsController" />

<!-- <bean id="goodsNumberService" class="service.goods.GoodsNumberService" />   -->
<!-- ID는 생략해줘도 상관없음 -->
    <bean class="controller.goods.GoodsCartController"/>
    <!--  카트 컨트롤러  -->

    <bean class="controller.goods.GoodsViewController"/>
    <!--  카트 뷰 컨트롤러  -->

    <bean class="controller.goods.GoodsController"/>
    <!--  상품 컨트롤러  -->

    <bean class="repository.GoodsRepository"/>
    <!--  상품 레포지토리  -->

    <bean class="service.goods.GoodsNumberService" />
    <!--  상품 번호 서비스단  -->

    <bean class="service.goods.GoodsWriteService" />
    <!--  상품 등록 서비스  -->

    <bean class="service.goods.GoodsListService" />
    <!--  삼품 리스트 보여주는 서비스  -->

    <bean class="service.goods.GoodsDetailService" />
    <!--  상품 상세보기 서비스  -->

    <bean class="service.goods.GoodsUpdateService" />
    <!--  상품정보 수정하는 서비스  -->

    <bean class="service.goods.GoodsDeleteService" />
